<html>
    <head>
        <link rel="stylesheet" href="http://localhost:8090/external.css" type="text/css">
        <title>Mongo Results</title>
    </head>
    <body>
        <h1 style="color:red;">Hello User, Please find below all mongo records.</h1>
        <br>
        <div>
            <table id="customers">
                <tr>
                    <th>Id</th><th>Name</th><th>Email</th><th>Mobile No</th>
                </tr>
                <% for (var i = 0; i < data.length; i++) { %>
                    <tr>
                    <td><%= data[i]._id %></td>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].email %></td>
                    <td><%= data[i].mobileno %></td>
                </tr>    
                <% } %>
            </table>
        </div>
        <br>
    </body>
</html>